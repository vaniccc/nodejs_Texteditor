<div id="formDiv">
    <form action="/users/signup" method="post" id="form">
        <div class="formContainer">
            <label for="username">Benutzername</label>
            <input type="text" name="username" id="username" required>
        </div>
        <div class="formContainer">
            <label for="password">Passwort</label>
            <input type="password" name="password" id="password" required>
        </div>
        <div class="formContainer">
            <label for="passwordConfirm">Passwort bestätigen</label>
            <input type="password" name="passwordConfirm" id="passwordConfirm" required>
        </div>

        <div id="registerDiv">
            <p>Bereits ein Konto?</p>
            <a href="/">Anmelden</a>
        </div>

        <div id="buttonDiv">
            <input type="submit" class="formBtn" value="Registrieren">
            <input type="reset" class="formBtn" value="Zurücksetzen">
        </div>
    </form>
</div>